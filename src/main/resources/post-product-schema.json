{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "Product",
  "required": [
    "name",
    "price"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "minLength": 2,
      "title": "The name schema"
    },
    "price": {
      "$id": "#/properties/price",
      "type": "number",
      "minimum": 1,
      "maximum": 10000,
      "title": "The price schema"
    }
  },
  "additionalProperties": true
}